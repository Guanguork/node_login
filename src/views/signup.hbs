<div class="row">
  <div class="col-md-6 offset-md-3">
    <div class="card mt-4">
      <div class="card-header ">
        <h3> Creación de cuenta </h3>
      </div>
      <div class="card-body">
        <form action="/signup" method="POST">
          <div class="form-group">
            <input class="form-control" type="text" name="email" placeholder="Email" />
          </div>
          <div class="form-group">
            <input class="form-control" type="password" name="password" placeholder="Contraseña" />
          </div>
          {{#if signupMessage}}
            <div class="alert alert-danger">{{signupMessage}}</div>
          {{/if}}
          <button class="btn btn-primary btn-block mt-4" type="submit"> Create account </button>
        </form>
        <p class="mt-4 ">Do you have an account? <a href="/signin"> Singin </a> </p>
      </div>
    </div>
  </div>
</div>