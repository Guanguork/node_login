<div class="row">
  <div class="col-md-12 offset-md-0">
    <div class="card mt-4">
      <div class="card-header ">
        <h1>Reports</h1>
        <a href="/reports/add" class="btn btn-primary">New report</a>

        <table class="table table-hover mt-5">
          <thead>
            <tr>
              <th scope="col">_id</th>
              <th scope="col">mounth</th>
              <th scope="col">year</th>
              <th scope="col">actions</th>
            </tr>
          </thead>
          <tbody>
            {{#each reports}}
            <tr>
              <td scope="row">{{this._id}}</td>
              <td>{{this.mounth}}</td>
              <td>{{this.year}}</td>
              <th class="row">
                <a href="/reports/edit/{{this._id}}" class="btn btn-outline-primary">Edit</a>
                <form  class="ml-2"   action="/reports/delete/{{this._id}}?_method=DELETE" method="POST">
                  <input type="hidden" name="_method" value="DELETE">
                  <button type="submit" class="btn btn-outline-danger">Delete</button>
                </form>
              </th>
            </tr>
            {{/each}}
          </tbody>
        </table>

        {{!-- {{#each reports}}
        <pre> {{this}} </pre>
        {{/each}} --}}


      </div>
    </div>
  </div>
</div>