<%- layout('layouts/main.ejs') %>

<div class="row">
  <div class="col-md-6 offset-md-3">
    <div class="card mt-4">
      <div class="card-header "><h3>Signup</h3></div>
      <div class="card-body">
        <form action="/signup" method="POST">
          <div class="form-group">
            <input class="form-control" type="text" name="email" placeholder="Insert Email" />
          </div>
          <div class="form-group">
            <input class="form-control" type="password" name="password" placeholder="Insert pass" />
          </div>
          <button class="btn btn-primary btn-block mt-4" type="submit">Register</button>
        </form>
        <p class="mt-4 ">Or <a href="/signin"> Signin </a> if you have an account yet</p>
      </div>
    </div>
  </div>
</div>
